<?xml version="1.0"?>
<ruleset>
	<rule ref="vendor/mediawiki/mediawiki-codesniffer/MediaWiki"/>
	<file>.</file>
	<arg name="extensions" value="php,php5,inc"/>
	<arg name="encoding" value="utf8"/>
	<exclude-pattern>vendor</exclude-pattern>
        <rule ref="Generic.CodeAnalysis.ForLoopWithTestFunctionCall.NotAllowed">
                <severity>0</severity>
        </rule>
        <rule ref="Generic.Files.LineLength.TooLong">
                <severity>0</severity>
        </rule>
        <rule ref="MediaWiki.ControlStructures.AssignmentInControlStructures.AssignmentInControlStructures">
                <severity>0</severity>
        </rule>
        <rule ref="MediaWiki.NamingConventions.ValidGlobalName.wgPrefix">
                <severity>0</severity>
        </rule>
        <rule ref="MediaWiki.Usage.DirUsage.FunctionFound">
                <severity>0</severity>
        </rule>
        <rule ref="MediaWiki.VariableAnalysis.UnusedGlobalVariables">
                <severity>0</severity>
        </rule>
        <rule ref="PSR2.Methods.MethodDeclaration.AbstractAfterVisibility">
                <severity>0</severity>
        </rule>
        <rule ref="Squiz.Classes.ValidClassName.NotCamelCaps">
                <severity>0</severity>
        </rule>
</ruleset>
